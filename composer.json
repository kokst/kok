{
    "name": "kokst/kok",
    "type": "project",
    "description": "Kok.",
    "license": "MIT",
    "require": {
        "php": "^7.3",
        "ecrmnn/laravel-https": "^1.0",
        "fideloper/proxy": "^4.2",
        "fruitcake/laravel-cors": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "kokst/core": "^6.2.3",
        "laracasts/flash": "^3.0",
        "laravel/framework": "^7.0",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^2.0",
        "laravelcollective/html": "^6.0",
        "laravolt/avatar": "^3.0",
        "lavary/laravel-menu": "^1.7",
        "nwidart/laravel-modules": "^5.0",
        "spatie/laravel-permission": "^3.0",
        "thecodingmachine/safe": "^1.0.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/kokst/Laravel-PHP-CS-Fixer"
        }
    ],
    "require-dev": {
        "beyondcode/laravel-query-detector": "^1.2.0",
        "dczajkowski/auth-tests": "^7.0",
        "facade/ignition": "^2.0",
        "fzaninotto/faker": "^1.9.1",
        "laravel/homestead": "^9.0",
        "martinlindhe/laravel-vue-i18n-generator": "^0.1.46",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^4.1",
        "nunomaduro/larastan": "^0.5.2",
        "phpunit/phpunit": "^8.5",
        "stechstudio/laravel-php-cs-fixer": "dev-laravel-7",
        "thecodingmachine/phpstan-safe-rule": "^1.0.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "Modules/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan vendor:publish --provider \"Kokst\\Core\\Providers\\CoreServiceProvider\" --force",
            "@php artisan vue-i18n:generate"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
